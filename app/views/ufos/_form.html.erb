<%= simple_form_for @ufo do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.input :name %>
  <%= f.input :status, collection: Ufo.statuses.keys, include_blank: false, default: "active" %>
  <%= f.input :description %>
  <%#= f.input :description, as: :rich_text_area %>
  <%= f.submit %>
<% end %>
